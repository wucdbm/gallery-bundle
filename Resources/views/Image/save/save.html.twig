{% extends '@WucdbmGallery/Image/base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-4">
            <img src="{{ path('wucdbm_gallery_image_serve_temp', {name: name}) }}" id="image" class="img-responsive"/>
        </div>
        <div class="col-lg-8">
            {% if image.id %}
                {# Controller redirects before that so this is kinda useless #}
                <div class="alert alert-danger">
                    <p>This image already exists.</p>
                    <p>
                        <a href="{{ path('wucdbm_gallery_image_edit', {id: image.id}) }}" class="btn blue pull-right">
                            <i class="fa fa-picture-o"></i>
                            Edit
                        </a>
                    </p>
                    <div class="clearfix"></div>
                </div>
            {% endif %}
            {% form_theme form '@WucdbmGallery/_shared/form/form_theme.html.twig' %}
            {{ form_start(form) }}
            {{ form_rest(form) }}
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    Save
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li>
        Save
    </li>
{% endblock %}