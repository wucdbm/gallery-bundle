{% extends '@WucdbmGallery/Image/base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-4">
            <img src="{{ image|wucdbmGalleryImage }}" id="image" class="img-responsive"/>
        </div>
        <div class="col-lg-8">
            {% form_theme form '@WucdbmGallery/_shared/form/form_theme.html.twig' %}
            {{ form_start(form) }}
            {{ form_rest(form) }}
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    Save
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li>
        #{{ image.id }} - {{ image.name }}
    </li>
    <li>
        Edit
    </li>
{% endblock %}